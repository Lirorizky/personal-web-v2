<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <title>Project Details</title>

    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="../public/style/style.css" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;1,200;1,300;1,400;1,500;1,600&display=swap"
      rel="stylesheet"
    />

    <!-- bootstrap -->
    <!-- CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />

    <!-- JavaScript Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
    <script src="../project-detail.js"></script>
  </head>
  <body class="project-detail-body">
    <!-- Navbar Start-->

    <nav class="navbar navbar-expand-lg bg-light">
      <div class="container">
        <a class="navbar-brand" href="/home">
          <img src="../public/assets/icons/dumbways_logo.png" alt="" />
        </a>
        <div
          class="collapse navbar-collapse d-flex justify-content-lg-between"
          id="navbarSupportedContent"
        >
          <div class="left-side-nav">
            <ul class="navbar-nav me-auto ms-4 mb-2 mb-lg-0">
              <li class="nav-item">
                <a
                  class="nav-link active me-3 active-page"
                  aria-current="page"
                  href="/home"
                  >Home</a
                >
              </li>
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/add-project"
                  >Add Project</a
                >
              </li>
            </ul>
          </div>
          <div class="right-side-nav d-flex" role="search">
            <ul class="navbar-nav me-auto ms-4 mb-2 mb-lg-0">
              <li class="nav-item">
                <a
                  class="contact-nav nav-link ms-3 btn btn-dark text-white rounded-pill pe-3 ps-3 pb-1 pt-1"
                  data-bs-toggle="button"
                  aria-current="page"
                  href="/contact"
                  >Contact Me</a
                >
              </li>
            </ul>
          </div>
        </div>
      </div>
    </nav>

    <!-- navbar end -->
    <!-- Blog Details -->

    <div class="project-detail-page pt-5" id="project-detail-page">
      <h1 class="text-center mb-5">{{project.title}}</h1>
      <div class="project-detail-container d-flex">
        <div class="project-detail-image flex-fill">
          <img
            src="../public/assets/images/holding_phone.jpg"
            alt=""
            class="w-100 h-100 rounded-4"
          />
        </div>
        <div class="project-detail-info ps-5">
          <div class="detail-info-duration">
            <h3>Duration</h3>
            <div class="info-duration-date d-flex align-items-center ps-2">
              <img src="../public/assets/icons/calendar.png" alt="" class="me-2" />
              <p id="info-start-date" class="me-2 fw-semibold ms-2 mt-3">
                {{project.start_date}}
              </p>
              <p class="mt-3">-</p>
              <p id="info-end-date" class="me-2 fw-semibold ms-2 mt-3">
                {{project.end_date}}
              </p>
            </div>
            <div class="../public/assets/icons/clock.png" alt="" class="me-2" />
              <p id="info-duration-time" class="fw-semibold ms-2 mt-3">
                {{project.duration}}
              </p>
            </div>
          </div>
          <div class="detail-info-tech">
            <h3>Technologies</h3>
            <div class="tech-info-icons">
              <div class="tech-info-icons-left d-flex align-items-center ps-2">
                <img
                  src="{{project.tech1_img}}"
                  alt=""
                  id="playstore-icon"
                />
                <label for="playstore-icon fw-semibold">{{project.tech1_label}}</label>
                <img
                  src="{{project.tech2_img}}"
                  alt=""
                  id="android-icon"
                />
                <label for="android-icon">{{project.tech2_label}}</label>
              </div>
              <div class="tech-info-icons-right d-flex align-items-center ps-2">
                <div>
                  <img src="{{project.tech3_img}}" alt="" id="java-icon" />
                  <label for="java-icon">{{project.tech3_label}}</label>
                </div>
                <div>
                  <img src="{{project.tech4_img}}" alt="" id="java-icon" />
                  <label for="java-icon">{{project.tech4_label}}</label>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="project-detail-description">
        <p class="detail-description-text">
          {{project.content}}
        </p>
      </div>
    </div>

    <!-- Blog Details End-->
  </body>
</html>
